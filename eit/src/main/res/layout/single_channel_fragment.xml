<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:id="@+id/channel_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/message_layout_background"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/message_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/message_background">

        <EditText
            android:padding="4dp"
            android:layout_marginRight="12dp"
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:inputType="textCapSentences"
            android:hint="@string/message_input_hint"
            />

        <ImageButton
            android:id="@+id/message_send_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/bck_menu"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_send" />

    </LinearLayout>
</LinearLayout>