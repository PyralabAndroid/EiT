<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purty_wood" >    
      
      
    <EditText android:id="@+id/registerEmail"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dip"
         android:hint="Email*"
         android:maxLength="45"
         android:inputType="textEmailAddress"
         android:layout_marginBottom="20dip"/>
      
      
     <EditText android:id="@+id/registerPassword"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dip"
         android:hint="Password*"
         android:inputType="textPassword"
         android:maxLength="45"
         android:layout_marginBottom="20dip"/>
     
      
     <EditText android:id="@+id/registerName"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dip"
         android:hint="Name*"
         android:layout_marginBottom="20dip"/>
         
      
     <Button android:id="@+id/btnRegister"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Register"
         android:layout_margin="10dip"
         android:onClick="onClick"/>
     
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="15dp"
         android:textColor="#303030"
         android:textSize="16sp"
         android:maxLines="4"
         android:text="* Required fileds \n
Name identifies you within account users." />
     
     
     <WebView
         android:id="@+id/register_webview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone">
     </WebView>
     


</LinearLayout>
