<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/message_background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/message_row_user_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:text="T2 - IV rok"
            android:textColor="@color/default_text_color"
            android:textSize="10sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/message_row_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="pRabel"
            android:textColor="@color/default_text_color"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message_row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2 min. temu"
            android:textColor="@color/default_text_color"
            android:textSize="10sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/message_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/message_row_message"
        android:background="@color/default_text_color"/>

    <TextView
        android:id="@+id/message_row_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/message_line"
        android:gravity="left|center"
        android:minHeight="40dp"
        android:padding="8dp"
        android:textColor="@color/f_btn"
        android:text="Lorem ipsum dolor sit amet enim. Etiam ullamcorper. Suspendisse a pellentesque dui, non felis. Maecenas malesuada elit lectus felis, malesuada ultricies. Curabitur et ligula. Ut molestie a, ultricies porta urna. Vestibulum commodo volutpat a, convallis ac, laoreet enim. Phasellus fermentum in, dolor. "
        android:textSize="16sp"/>


</LinearLayout>