<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/base_schedule_row_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="9.45 - 11.15"
            android:textSize="18sp"
            android:textColor="@color/time_text_color"/>

        <TextView
            android:id="@+id/base_schedule_row_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="Wyklad"
            android:textSize="16sp"/>

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/base_schedule_row_name"wq
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Podstawy matematyki"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/base_schedule_row_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p. 201"
            android:textSize="16sp" />
    </TableRow>

</LinearLayout>